#include<iostream>
using namespace std;
int main()
{
    int n=5;
    int array[n]={6,3,8,1,9};
    for(int i=0;i<n-1;i++)
    {
        int minindex=i;
        for(int j=i+1;j<n;j++)
        {
            if(array[j]<array[minindex])   //(array[j]<array[i])
            {
                minindex=j;
            }
        }
        swap(array[minindex],array[i]);  //(array[j],array[i])
    }
    for(int i=0;i<n;i++)
    {
        cout<<array[i]<<" ";
    }
}

