#include <iostream>
using namespace std;
int add(int c,int d)
{
    for(int i=1;i<=c;i++)
    {
        d=d+1;
    }
    return d;
}
int main(void)
{
    int a,b;
    cout<<"Enter two number:"<<endl;
    cin>>a>>b;
    int c=add(a,b);
    cout<<"Result is: "<<c;
    return 0;
}

